provide: model, collection, view

macro model(`{^name, ^body}`) =
   let b = @mark(`backbone`)
   ```
   ^name = [^b].Model.extend with {
      ^body
   }
   ```

macro collection(`{^name, ^body}`) =
   let b = @mark(`backbone`)
   ```
   ^name = [^b].Collection.extend with {
      ^body
   }
   ```
macro view(`{^name, ^body}`) =
   let b = @mark(`backbone`)
   ```
   ^name = [^b].View.extend with {
      ^body
   }
   ```
